#post_material
  %h1= @post.title
  %p= @post.content
  = link_to "Dislike post", dislike_post_path(@post), class: "button", style: "float: right"
  = link_to "Like post", like_post_path(@post), class: "button", style: "float: right"
  #comments
    %h3
      = @post.comments.count
      Comments
      %br/
      = @post.likes
      Likes
      %br/
      = @post.dislikes
      Dislikes
    = render @post.comments

    %h3 Reply to thread
    = render "comments/form"

    %br/
    %hr/
    %br/

    = link_to "Edit Post", edit_post_path(@post), class: "button"
    = link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you wanna delete?" }, class: "button"